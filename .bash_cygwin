# .bash_cygwin

#-----------------
# Environment variables
#-----------------

# Required for colored manpages to work
export GROFF_NO_SGR=1

export GROOVY_HOME=/home/crogers/tools/groovy/latest
export JAVA_HOME=/home/crogers/tools/java/jdk-7u80
export RDECK_BASE=/home/crogers/tools/rundeck


PATH=$PATH:$HOME/bin:$GROOVY_HOME/bin:$JAVA_HOME/bin


#-----------------
# Aliases
#-----------------
alias cs='cygstart'
# open windows explorer in current directory
alias open='/cygdrive/c/Windows/explorer.exe /e,`cygpath -wa "$1"`'
