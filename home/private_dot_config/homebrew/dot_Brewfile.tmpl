
{{- /* Tap repositories */ -}}
{{- $taps := list
  "homebrew/bundle"
  "homebrew/cask-versions"
  "buo/cask-upgrade"
-}}

{{- /* Formula to install */ -}}
{{- $formula := list
  "bat"
  "chezmoi"
  "git"
  "jq"
  "mas"
  "openssl"
  "pre-commit"
  "tree"
  "wget"
 -}}

{{- if .personal -}}
{{- $formula = concat $formula ( list
  "exiftool" )
-}}
{{- end -}}

{{- if not .personal -}}
{{- $formula = concat $formula ( list
  "terraform" )
-}}
{{- end -}}

{{- /* Casks to install */ -}}
{{- $casks := list -}}
{{- $casks = concat $casks ( list
  "1password"
  "1password-cli"
  "alfred"
  "bartender"
  "google-chrome"
  "hazel"
  "logi-options-plus"
  "iterm2"
  "itsycal"
  "visual-studio-code"
  "zoom" )
-}}

{{- if .personal -}}
{{- $casks = concat $casks ( list
  "dropbox"
  "photosweeper-x"
  "photosync"
  "spotify"
  "quicken" )
-}}
{{- end -}}


{{- /* Taps */ -}}
{{- range ( $taps | sortAlpha | uniq ) }}
tap "{{ . }}"
{{- end }}

{{- /* Formula */ -}}
{{- range ( $formula | sortAlpha | uniq ) }}
brew "{{ . }}"
{{- end }}

{{- /* Casks */ -}}
{{- range ( $casks | sortAlpha | uniq ) }}
cask "{{ . }}"
{{- end }}

